<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="img/favicon.png">
    <title>Admin Dashboard</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        /* General Styles */
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            display: flex;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            color: #fff;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            padding: 20px;
            transition: all 0.3s ease;
        }

        .sidebar .profile {
            text-align: center;
            margin-bottom: 30px;
        }

        .sidebar .profile img {
            border-radius: 50%;
            width: 80px;
            height: 80px;
            object-fit: cover;
        }

        .sidebar h2 {
            font-size: 24px;
            margin-bottom: 30px;
            text-align: center;
            font-weight: 700;
        }

        .sidebar a {
            display: block;
            color: #fff;
            text-decoration: none;
            padding: 15px;
            margin-bottom: 10px;
            font-weight: 500;
            border-radius: 8px;
            transition: background-color 0.3s ease;
        }

        .sidebar a:hover {
            background-color: #3498db;
        }
/* Main Content Styles */
.main-content {
    margin-left: 250px;
    padding-left: 50px;
    width: 100%;
    background-color: #ecf0f1;
    min-height: 100vh;
    overflow-x: auto;
}

.dashboard-header h1 {
    color: #2c3e50;
    font-size: 28px; /* Reduced font size */
    font-weight: 600; /* Adjusted weight */
}

.profile-card .user-info {
    font-size: 16px; /* Reduced font size */
    color: #2c3e50;
}

.profile-card .user-info .name {
    font-size: 20px; /* Reduced font size */
    font-weight: 600; /* Adjusted weight */
}
.card{
    background-color:#fff;
}
.card h3 {
    color: #2c3e50;
    font-size: 20px; /* Reduced font size */
    font-weight: 600; /* Adjusted weight */
}

/* Stats Section Styles */
.stats-container {
    padding-top: 40px;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
}

.stat-card {
    background-color: #fff;
    padding: 15px; /* Reduced padding */
    border-radius: 4px; /* Less curve on corners */
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1); /* Slightly lighter shadow */
    text-align: center;
}

.stat-card h4 {
    color: #34495e;
    font-size: 16px; /* Reduced font size */
    font-weight: 500;
    margin-bottom: 10px; /* Adjusted spacing */
}

.stat-card .value {
    font-size: 28px; /* Reduced font size */
    font-weight: 700;
    color: #3498db;
}

/* Responsive Styling */
@media (max-width: 768px) {
    .main-content {
        margin-left: 0;
        padding: 10px;
    }

    .dashboard-header {
        flex-direction: column;
        align-items: flex-start;
    }

    .stats-container {
        grid-template-columns: repeat(2, 1fr);
    }

    .charts-container {
        flex-direction: column;
    }
}

    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <div class="profile">
            <img src="https://www.w3schools.com/w3images/avatar2.png" alt="User Avatar">
            <p>Dr. John Doe</p>
            <p>Admin</p>
        </div>
        <a href="/admin/dashboard#">Dashboard</a>
        <a href="/users">Users</a>
        <a href="#">Reports</a>
        <a href="/admin/settings">Settings</a>
        <a href="/admin/logout">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="dashboard-header">
            <h1>Welcome, Admin!</h1>
        </div>

        <!-- Profile Card -->
        <div class="profile-card">
            <div class="user-info">
                <div class="name">Dr. John Doe</div>
                <div>Admin</div>
                <div>Last Login: 5 hours ago</div>
            </div>
        </div>

        <!-- Stats Section -->
        <div class="stats-container">
            <div class="stat-card">
                <h4>Total Users</h4>
                <div class="value"><%= userCount %></div>
            </div>
            <div class="stat-card">
                <h4>Active Users</h4>
                <div class="value"><% activeUserCount %></div>
            </div>
            <div class="stat-card">
                <h4>New Registrations</h4>
                <div class="value">42</div>
            </div>
            <div class="stat-card">
                <h4>Messages Sent</h4>
                <div class="value">150</div>
            </div>
        </div>

        <!-- Cards Section -->
        <div class="card">
            <h3>User Growth</h3>
            <p>Track the growth of users in your application over the past 6 months.</p>
            <!-- Add Chart Here -->
        </div>

        <div class="card">
            <h3>Daily Sugar Levels</h3>
            <p>View the daily sugar levels of users with insights and trends.</p>
            <!-- Add Chart Here -->
        </div>

        <!-- Charts Section -->
        <div class="charts-container">
            <div class="card">
                <h3>Average Sugar Level</h3>
                <canvas id="sugarChart" style="width:100%; height:300px;"></canvas>
            </div>
            <div class="card">
                <h3>Calories Burned</h3>
                <canvas id="caloriesChart" style="width:100%; height:300px;"></canvas>
            </div>
        </div>
    </div>

    <!-- Scripts for Charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctxSugar = document.getElementById('sugarChart').getContext('2d');
        const sugarChart = new Chart(ctxSugar, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Sugar Level',
                    data: [85, 90, 88, 92, 85, 80],
                    borderColor: '#3498db',
                    fill: false,
                    tension: 0.1
                }]
            }
        });

        const ctxCalories = document.getElementById('caloriesChart').getContext('2d');
        const caloriesChart = new Chart(ctxCalories, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                datasets: [{
                    label: 'Calories Burned',
                    data: [200, 250, 230, 300, 280, 310],
                    backgroundColor: '#2ecc71',
                    borderRadius: 8,
                    barThickness: 15
                }]
            }
        });
    </script>
</body>
</html>
